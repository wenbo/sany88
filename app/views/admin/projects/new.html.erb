<div id="content" class="span10">
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header well" data-original-title="">
				<h2><i class="icon-edit"></i> 创建新的案例</h2>
				<div class="box-icon">
					<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				</div>
			</div>
			<div class="box-content">
				<%= form_tag admin_projects_path, :method => :post, :multipart =>true, :class =>'form-horizontal' do %>
        <fieldset>
          <legend></legend>
          <div class="control-group">
            <label class="control-label" for="cbrand_name">客户品牌名称</label>
            <div class="controls">
              <input type="text" class="span6 typeahead" id="cbrand_name" name="project[brand_name]" data-required="true" data-error-message="客户品牌名称不能为空!" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="ccompany_name">客户公司名称</label>
            <div class="controls">
              <input type="text" class="span6 typehead" name="project[company_name]" id="ccompany_name" data-required="true" data-error-message="客户公司名称不能为空!" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cproject_category_id">案例所属分类</label>
            <div class="controls">
							<%= select_tag "project[project_category_id]", options_from_collection_for_select(ProjectCategory.all, "id", "name"), prompt: "Select something", id: "cproject_category_id"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cdesc">服务内容</label>
            <div class="controls">
              <textarea name="project[desc]" id="cdesc" cols="30" rows="10" style="margin: 0; width: 401px; height: 182px;" data-required="true" data-error-message="内容不能为空!"></textarea>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cproject_thumbnail">列表页缩略图(w220xh150)</label>
            <div class="controls">
              <input type="file" class="span6 typeahead" id="cproject_thumbnail" name="project_thumbnail[image]" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cis_public">是否公开</label>
            <div class="controls">
              <input type="checkbox" class="span6 typeahead" id="clink" name="project[is_public]" />
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary" id="project_create_btn">更新</button>
          </div>
        </fieldset>
				<% end %>

			</div>
		</div><!--/span-->

	</div>
</div>
<script type="text/javascript" src="/js/my97DatePicker/WdatePicker.js"></script>
<!--<script type="text/javascript" src="/js/parsley/i18n/messages.zh-cn.js"></script>-->
<script type="text/javascript" src="/js/parsley/parsley.min.js"></script>
<script type="text/javascript" src="/js/parsley/parsley.extend.js"></script>


<script type="text/javascript">
  $(function (){
  $('#project_create_btn').click(function (){
  $('form').parsley('validate');
  });

  });
</script>
