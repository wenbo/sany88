<div id="content" class="span10">
  <div class="row-fluid sortable ui-sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title="">
        <h2><i class="icon-edit"></i>编辑案例</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
        </div>
      </div>
      <div class="box-content">
        <%= form_tag admin_project_path, :multipart =>true, :class =>'form-horizontal' do %>
        <input name="_method" type="hidden" value="put" />
        <fieldset>
          <legend></legend>

          <div class="control-group">
            <label class="control-label" for="cname">案例名称</label>
            <div class="controls">
              <input type="text" class="span6 typeahead" id="cname" name="project[name]" value="<%= @project.name %>" data-required="true" data-error-message="案例名称不能为空!" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="ctitle">客户品牌名称</label>
            <div class="controls">
              <input type="text" class="span6 typeahead" id="ctitle" name="project[brand_name]" value="<%= @project.brand_name %>" data-required="true" data-error-message="客户品牌名称不能为空!" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="ccompany_name">客户公司名称</label>
            <div class="controls">
              <input name="project[company_name]" id="ccompany_name" data-required="true" data-error-message="内容不能为空!" value="<%= @project.company_name %>" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cproject_category_id">案例所属分类</label>
            <div class="controls">
							<%= select_tag "project[project_category_id]", options_from_collection_for_select(ProjectCategory.all, "id", "name", @project.project_category_id),  prompt: "select category", id: "cproject_category_id"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cservice_content">服务内容</label>
            <div class="controls">
              <input name="project[service_content]" id="cservice_content" data-required="true" data-error-message="内容不能为空!" value="<%= @project.service_content %>" /></div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cdesc">详细介绍</label>
            <div class="controls">
              <textarea name="project[desc]" id="cdesc" cols="30" rows="10" style="margin: 0; width: 401px; height: 182px;" data-required="true" data-error-message="内容不能为空!"><%= @project.desc %></textarea>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cimage">列表页缩略图(w220xh150)</label>
            <div class="controls">
              <input type="file" class="span6 typeahead" id="cimage" name="project_thumbnail[image]" />
              <img src="<%= @project.project_thumbnail.image.url %>" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="cis_public">是否公开</label>
            <div class="controls">
              <input type="checkbox" name="project[is_public]" class="span6 typeahead" id="clink" />
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary" id="project_create_btn">更新</button>
          </div>
        </fieldset>
        <% end %>

      </div>
    </div><!--/span-->

  </div>
</div>
<script type="text/javascript" src="/js/my97DatePicker/WdatePicker.js"></script>
<!--<script type="text/javascript" src="/js/parsley/i18n/messages.zh-cn.js"></script>-->
<script type="text/javascript" src="/js/parsley/parsley.min.js"></script>
<script type="text/javascript" src="/js/parsley/parsley.extend.js"></script>


<script type="text/javascript">
  $(function (){
  $('#project_create_btn').click(function (){
  $('form').parsley('validate');
  });

  });
</script>
